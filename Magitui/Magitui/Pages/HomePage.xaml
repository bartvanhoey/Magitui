<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magitui.Pages.HomePage"
               xmlns:fontawesome="clr-namespace:Magitui.Resources.Fonts"
             Title="HomePage"
             BackgroundColor="White">
    <StackLayout BackgroundColor="Aqua">
        <Label Text="Welcome to .NET MAUI!" FontSize="Large" FontFamily="FAS"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

        <Label Text="{x:Static fontawesome:FAIcons.Ambulance}" FontSize="Large" FontFamily="FAS"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>